{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "pretty": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "paths": {
      "*": [
        "./node_modules/"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "tests",
    "rollup.config.js"
  ]
}